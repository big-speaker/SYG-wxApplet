.searchgoodsList{
  width:100%;
  height:220rpx;
  border-bottom: 1px solid #ccc;
}
.searchgoodsList navigator{
  display:flex;
}
.searchgoodsList navigator .imageBox{
  flex:1;
  display:flex;
  justify-content: center;
  align-items: center;
}
.searchgoodsList navigator .contentBox{
  flex:2;
  display:flex;
  width:100%;
  height:100%;
  flex-direction:column;
  justify-content: space-around;
}
.goodDescribe{
  font-size:26rpx;
  display:-webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goodPrice{
  color:red
}
image{
  width:80%;
}