page{
  margin-bottom:90rpx;
}
.swiperBox{
  width:100%;
}
.swiperBox swiper{
  width:100%;
  height:500rpx;
  display:flex;
}
swiper-item{
  display:flex;
  justify-content:center;
}
image{
  width:70%;
}
.swiperBox .goodPrice{
  color:red;
  margin-bottom:1vh;
}
.swiperBox .goodContent{
  display:flex;
  width:100%;
  height:115rpx;
  border-bottom:10rpx solid #ccc;
}
.detailContent{
  flex:5;
  display:-webkit-box;
  font-size: 37rpx;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  border-right: 2rpx solid;
}
.star{
  flex:1;
  display:flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.title{
  color:red;
  font-size:40rpx;
  padding:10rpx;
  border-bottom:10rpx solid #ccc;
}
.bottomBox{
  position:fixed;
  left:0;
  bottom:0;
  width:100%;
  height:100rpx;
  display:flex;
  border-top:#ccc solid 7rpx;
  background-color:white;
}
.bottomBox .itemBox{
  width:16%;
  height:100%;
  position:relative;
}
.bottomBox .text1Box{
  width:26%;
  height:100%;
  display:flex;
  justify-content: center;
  align-items: center;
  background-color:orange;
}
.bottomBox .text2Box{
  flex:2;
  display:flex;
  justify-content: center;
  align-items: center;
  background-color:red;
}
.bottomBox .itemBox view{
  font-size:25rpx;
  text-align: center;
}
.bottomBox .itemBox .iconBox image{
  margin-top:10rpx;
  width:30%;
}
.bottomBox .text1Box view{
  color:white;
}
.bottomBox .text2Box view{
  color:white;
}
button{
  position:absolute;
  left:0;
  top:0;
  width:100%;
  height:100%;
  opacity: 0;
}